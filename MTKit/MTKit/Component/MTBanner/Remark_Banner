
1,可直接在storyboard中使用
2，代码 直接初始化MTBannerView，并且设置MTBannerViewDelegate,MTBannerViewDataSource

----------MTBannerViewDataSource  例子 ------------
/**
返回 Banner 需要显示 Item(View) 的个数  (必须)
*/
- (NSInteger)mt_numberOfItemsInBannerView:(MTBannerView *)bannerView {
return _arr_banner.count;
}
/**
返回Banner中的View(无需设置 frame)  (必须)
*/
- (UIView *)mt_bannerView:(MTBannerView *)bannerView viewForItemAtIndex:(NSInteger)index {
// 取出数据
NSString *imageName = _arr_banner[index];

// 创建将要显示控件
UIImageView *imageView = [[UIImageView alloc] init];
imageView.image = [UIImage imageNamed:imageName];
imageView.contentMode = UIViewContentModeScaleAspectFill;

return imageView;
}
/**
返回 Footer 在不同状态时要显示的文字 ,如果需要
*/
- (NSString *)mt_bannerView:(MTBannerView *)banner titleForFooterWithState:(MTBannerFooterState)footerState {
if (footerState == MTBannerFooterStateNormal) {
return @"拖动进入下一页";
} else if (footerState == MTBannerFooterStateEnter) {
return @"释放进入下一页";
}
return nil;
}

-------------MTBannerViewDelegate ---------------

/**
点击Banner的view
*/
- (void)mt_bannerView:(MTBannerView *)bannerView didSelectItemAtIndex:(NSInteger)index {
NSLog(@"点击了第%ld个项目", (long)index);
}
/**
滚动到某个view
*/
- (void)mt_bannerView:(MTBannerView *)banner didScrollToItemAtIndex:(NSInteger)index
{
NSLog(@"滚动到第%ld个项目", (long)index);
}
/**
释放进入下一页面
*/
- (void)mt_bannerFooterDidEnter:(MTBannerView *)banner
{
NSLog(@"触发了footer");
}
